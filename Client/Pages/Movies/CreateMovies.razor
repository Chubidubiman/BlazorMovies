@page "/Movies/create"
@inject NavigationManager navigationManager

<h3>Create Movies</h3>

<MovieForm Movie="Movie" 
    OnValidSubmit="Create" 
    NoSelectedGender="GendersNoSelected">

</MovieForm>

@code {
    private Movie Movie = new Movie();
    private List<Gender> GendersNoSelected = new List<Gender>();

    protected override void OnInitialized()
    {
        GendersNoSelected = new List<Gender>()
        {
            new Gender(){ Id=1, Name="Comedy" },
            new Gender(){ Id=2, Name="Drama" },
            new Gender(){ Id=3, Name="Action" },
            new Gender(){ Id=4, Name="Sci-fi" }
        };
    }
    void Create()
    {
        navigationManager.NavigateTo("movies/create");
    }
}